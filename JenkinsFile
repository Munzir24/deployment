pipeline {
    agent {
        label "slave1"
    }
    environment {
        ANSIBLE_INVENTORY = 'hosts'
        CONFIGURE_PLAYBOOK = 'mytomcat.yaml'
        DEPLOY_PLAYBOOK = 'deploy-cicd.yaml'
        GIT_REPO = 'https://github.com/Munzir24/deployment.git'
        SSH_KEY_PATH = '/home/ec2-user/.ssh/mykey.pem'
        ANSIBLE_EXTRA_ARGS = "--private-key ${SSH_KEY_PATH}"
        NEXUS_CREDENTIALS_ID = 'nexus-token' // ID of the Jenkins credentials containing Nexus username and password
    }

    stages {
        stage('Checkout') {
            steps {
                git url: "${GIT_REPO}"
            }
        }

        stage('Install Python 3') {
            steps {
                sh '''
                if ! command -v python3 &> /dev/null; then
                  sudo yum install epel-release -y || sudo apt update
                  sudo yum install python3 -y || sudo apt install python3 -y
                fi
                '''
            }
        }

        stage('Configure Tomcat and Java on Dev') {
            steps {
                script {
                    ansiblePlaybook(
                        playbook: "${CONFIGURE_PLAYBOOK}",
                        inventory: "${ANSIBLE_INVENTORY}",
                        extraVars: "-e env=dev",
                        privateKey: "${SSH_KEY_PATH}"
                    )
                }
            }
        }

        stage('Configure Tomcat and Java on Prod') {
            steps {
                script {
                    ansiblePlaybook(
                        playbook: "${CONFIGURE_PLAYBOOK}",
                        inventory: "${ANSIBLE_INVENTORY}",
                        extraVars: "-e env=prod",
                        privateKey: "${SSH_KEY_PATH}"
                    )
                }
            }
        }

        stage('Deploy to Dev') {
            steps {
                withCredentials([usernamePassword(credentialsId: "${NEXUS_CREDENTIALS_ID}", passwordVariable: 'NEXUS_PASSWORD', usernameVariable: 'NEXUS_USER')]) {
                    script {
                        ansiblePlaybook(
                            playbook: "${DEPLOY_PLAYBOOK}",
                            inventory: "${ANSIBLE_INVENTORY}",
                            extraVars: [
                                env: 'dev',
                                nexus_user: env.NEXUS_USER,
                                nexus_password: env.NEXUS_PASSWORD
                            ],
                            privateKey: "${SSH_KEY_PATH}"
                        )
                    }
                }
            }
        }

        stage('Deploy to Prod') {
            steps {
                withCredentials([usernamePassword(credentialsId: "${NEXUS_CREDENTIALS_ID}", passwordVariable: 'NEXUS_PASSWORD', usernameVariable: 'NEXUS_USER')]) {
                    script {
                        ansiblePlaybook(
                            playbook: "${DEPLOY_PLAYBOOK}",
                            inventory: "${ANSIBLE_INVENTORY}",
                            extraVars: [
                                env: 'prod',
                                nexus_user: env.NEXUS_USER,
                                nexus_password: env.NEXUS_PASSWORD
                            ],
                            privateKey: "${SSH_KEY_PATH}"
                        )
                    }
                }
            }
        }
    }
}
